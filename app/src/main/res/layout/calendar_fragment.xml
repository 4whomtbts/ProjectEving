<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data class="CalendarFragmentBinding">
        <import type="android.view.View"/>
        <variable
            name="model"
            type="com.example.databinding2.ui.rootFragment.CalendarMonthVM"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="715dp"
        tools:layout_editor_absoluteY="8dp">


        <TextView
            android:id="@+id/text_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_month"
            app:layout_constraintLeft_toLeftOf="parent">

            <com.example.databinding2.custom.CRecyclerView
                android:id="@+id/pager_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false">

            </com.example.databinding2.custom.CRecyclerView>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>