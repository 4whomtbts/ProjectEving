<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialog_shape">

    <TextView
        android:id="@+id/voca_modify_save_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="24dp"
        android:background="?attr/selectableItemBackground"
        android:fontFamily="@font/nanum_gorthic"
        android:text="@string/save"
        android:textColor="@color/interaction_text_color"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/voca_modify_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/voca_modify_input"
        style="@style/CreatePlanInputTextTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_gorthic"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/voca_modify_guideline2"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/voca_modify_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/voca_modify_translation_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/voca_modify_guideline3"
        android:fontFamily="@font/nanum_gorthic"
        android:textSize="16dp"
        style="@style/CreatePlanInputTextTheme" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/voca_modify_guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/voca_modify_description_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/voca_modify_translation_input"
        android:fontFamily="@font/nanum_gorthic"
        android:textSize="16dp"
        style="@style/CreatePlanInputTextTheme">

    </com.google.android.material.textfield.TextInputEditText>

</androidx.constraintlayout.widget.ConstraintLayout>